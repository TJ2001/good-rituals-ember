{{#if addNewComment}}
<h1>New Comment for {{city.name}}</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="text">Text</label>
          {{input value=text id="text"}}
        </div>

        <button {{action 'save1'}}>Save</button>
      </form>
    </div>
  {{else}}
    <button {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
